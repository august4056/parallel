{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2022", "WebWorker"],
    "moduleResolution": "Bundler",
    "types": ["@cloudflare/workers-types", "vitest/globals"],
    "allowJs": false,
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@launchpad/shared": ["../../packages/shared/src"],
      "@launchpad/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"],
  "references": [{ "path": "../../packages/shared" }]
}
