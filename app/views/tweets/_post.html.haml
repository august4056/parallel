.content
  .content__left
    .content__left--image
      - if post.image.present?
        = image_tag post.image.url, tweet_path(post.id)
  .content__right
    .content__right__top
      = link_to post.title, tweet_path(post.id), class: "content__right__top--title"
    .content__right__bottom
      .content__right__bottom--userName
        = link_to post.user.name, user_path(post.user), class: "content__right__bottom--userName--btn"
      .content__right__bottom--date
        = post.created_at
