.content
  .content__top
    .content__top--image
      - if post.image.present?
        = image_tag post.image.url
  .content__bottom
    .content__bottom__top
      = link_to post.title, tweet_path(post.id), class: "content__right__top--title"
      - if post.text.present?
        .content__bottom__top--text
          = link_to post.text
    .content__bottom__right
      .content__bottom__right--userName
        = link_to post.user.name, user_path(post.user), class: "content__right__bottom--userName--btn"
      .content__bottom__right--date
        = post.created_at
